    <script>
        // Simulaci√≥n de Base de Datos
        const productos = [
            { id: 1, nombre: "Mameluco Nube de Algod√≥n", precio: 450, estilo: "Pijama", marca: "Carter's", img: "https://images.unsplash.com/photo-1544126592-807daa2b565b?q=80&w=500", tag: "Importado" },
            { id: 2, nombre: "Set Safari 3 Piezas", precio: 820, estilo: "Casual", marca: "OshKosh", img: "https://images.unsplash.com/photo-1622290291165-d341f1938b8a?q=80&w=500", tag: "Nuevo" },
            { id: 3, nombre: "Vestido Gala Rosa", precio: 950, estilo: "Elegante", marca: "Ralph Lauren Kids", img: "https://images.unsplash.com/photo-1519702581638-3f50c60bc997?q=80&w=500", tag: "Exclusivo" },
            { id: 4, nombre: "Zapatitos de Cuna Soft", precio: 380, estilo: "Calzado", marca: "Gerber", img: "https://images.unsplash.com/photo-1560506840-ec148e82a604?q=80&w=500", tag: "Disponible" },
            { id: 5, nombre: "Chaqueta Acolchada Invierno", precio: 1200, estilo: "Abrigo", marca: "Gap Baby", img: "https://images.unsplash.com/photo-1617331140180-e8262094733a?q=80&w=500", tag: "Importado" },
            { id: 6, nombre: "Body Pack Essential (5)", precio: 750, estilo: "B√°sico", marca: "Carter's", img: "https://images.unsplash.com/photo-1555009393-f20bdb245c4d?q=80&w=500", tag: "Best Seller" }
        ];

        let carrito = JSON.parse(localStorage.getItem('ps_cart')) || [];

        // Renderizar Cat√°logo
        function renderProductos() {
            const grid = document.getElementById('productGrid');
            grid.innerHTML = productos.map(p => `
                <div class="product-card">
                    <span class="product-tag">${p.tag}</span>
                    <img src="${p.img}" class="product-img" alt="${p.nombre}">
                    <div class="product-content">
                        <small style="color: var(--accent); font-weight: 600;">${p.marca}</small>
                        <h3 style="margin: 0.5rem 0; font-size: 1.15rem;">${p.nombre}</h3>
                        <p style="font-size: 0.85rem; color: #666;">${p.estilo}</p>
                        <p class="product-price">L ${p.precio.toFixed(2)}</p>
                        <button class="btn-add" onclick="agregarAlCarrito(${p.id})">Agregar a la Bolsa</button>
                    </div>
                </div>
            `).join('');
        }

        // L√≥gica Carrito
        function agregarAlCarrito(id) {
            const prod = productos.find(p => p.id === id);
            const enCarrito = carrito.find(item => item.id === id);
            
            if(enCarrito) enCarrito.cantidad++;
            else carrito.push({...prod, cantidad: 1});
            
            saveAndUI();
            toggleCart(true);
        }

        function saveAndUI() {
            localStorage.setItem('ps_cart', JSON.stringify(carrito));
            updateCartUI();
        }

        function updateCartUI() {
            const container = document.getElementById('cartContainer');
            const totalText = document.getElementById('cartTotalText');
            const countLabel = document.getElementById('cart-count');
            
            let total = 0;
            let totalItems = 0;

            container.innerHTML = carrito.map(item => {
                total += item.precio * item.cantidad;
                totalItems += item.cantidad;
                return `
                    <div class="cart-item">
                        <img src="${item.img}">
                        <div style="flex:1">
                            <h4 style="font-size:0.9rem">${item.nombre}</h4>
                            <p style="font-size:0.8rem">L ${item.precio} x ${item.cantidad}</p>
                        </div>
                        <div style="display:flex; gap: 8px;">
                            <button onclick="changeQty(${item.id}, -1)" style="border:none; cursor:pointer; width:25px; border-radius:5px">-</button>
                            <button onclick="changeQty(${item.id}, 1)" style="border:none; cursor:pointer; width:25px; border-radius:5px">+</button>
                        </div>
                    </div>
                `;
            }).join('');

            totalText.innerText = `L ${total.toFixed(2)}`;
            countLabel.innerText = totalItems;
        }

        function changeQty(id, change) {
            const item = carrito.find(i => i.id === id);
            item.cantidad += change;
            if(item.cantidad <= 0) carrito = carrito.filter(i => i.id !== id);
            saveAndUI();
        }

        function toggleCart(open = false) {
            const sidebar = document.getElementById('cartSidebar');
            if(open) sidebar.classList.add('active');
            else sidebar.classList.toggle('active');
        }

        // WhatsApp Checkout
        function sendWhatsAppOrder() {
            if(carrito.length === 0) return alert("Tu carrito est√° vac√≠o.");

            let msg = "Hola Peque√±os Sue√±os üòä\nMe gustar√≠a cotizar disponibilidad de estos art√≠culos para mi beb√©:\n\n";
            let total = 0;

            carrito.forEach((item, index) => {
                msg += `${index + 1}. *${item.nombre}*\n`;
                msg += `   Marca: ${item.marca} | Cant: ${item.cantidad}\n`;
                msg += `   Precio unit: L ${item.precio}\n\n`;
                total += item.precio * item.cantidad;
            });

            msg += `*Total estimado: L ${total.toFixed(2)}*\n\n`;
            msg += "¬øPodr√≠an confirmarme si tienen existencia y el costo del env√≠o? ¬°Muchas gracias! ‚ú®";

            const url = `https://wa.me/50497335686?text=${encodeURIComponent(msg)}`;
            window.open(url, '_blank');
        }

        // Inicio
        renderProductos();
        updateCartUI();
    </script>
